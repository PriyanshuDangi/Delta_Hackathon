<style>
  form {
    max-width: 450px;
  }
  .share {
    margin: 20px auto;
  }
</style>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Edit List</li>
  </ol>
</nav>
<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <a href="/dashboard" class="list-group-item">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
            Dashboard
          </a>
          <a href="/pages" class="list-group-item active main-color-bg"
            ><span
              class="glyphicon glyphicon-list-alt"
              aria-hidden="true"
            ></span>
            Pages
          </a>
          <a href="/addPage" class="list-group-item"
            ><span
              class="glyphicon glyphicon-list-alt"
              aria-hidden="true"
            ></span>
            Add Pages
          </a>
          <a href="/editHeader" class="list-group-item"
            ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit Header</a
          >
        </div>
      </div>
      <div class="col-md-9">
        <!-- Website Overview -->
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Edit List for <%= page.title%> Page</h3>
          </div>
          <div class="panel-body">
            <form action="/addEditList/<%= page._id%>" method="POST">
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input
                  type="email"
                  name="email"
                  class="form-control"
                  id="exampleInputEmail1"
                  aria-describedby="emailHelp"
                />
                <small id="emailHelp" class="form-text text-muted"
                  >Enter the email with which they registered</small
                >
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <div class="share">
              Share this link with the contributors <br />
              <a
                href="http://localhost:3000/editPage/<%= page._id%>/"
                target="_blank"
                >http://localhost:3000/editPage/<%= page._id%></a
              >
            </div>
            <table class="table table-striped table-hover">
              <tr>
                <th>Email</th>
                <th></th>
              </tr>
              <% for(let i = 0; i < page.canEdit.length; i++) { %>
              <tr>
                <td><%= page.canEdit[i]%></td>
                <!-- <td>
                  <a
                    class="btn btn-danger"
                    href="/deleteList/<%= page.canEdit[i]%>"
                    >Delete</a
                  >
                </td> -->
              </tr>
              <%}%>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
