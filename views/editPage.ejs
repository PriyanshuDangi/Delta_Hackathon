<form id="form">
  <div class="form-group inputlink">
    <label for="pageTitle">Page title</label>
    <input
      type="text"
      class="form-control"
      id="pageTitle"
      aria-describedby="emailHelp"
      value="<%= page.title%>"
    />
    <small id="emailHelp" class="form-text text-muted"
      >enter the page link e.g. "dashboard" (without "/")
    </small>
  </div>
  <div class="form-group inputlink">
    <label for="pagelink">Page Link</label>
    <input
      type="text"
      class="form-control"
      id="pagelink"
      aria-describedby="emailHelp"
      value="<%= page.link%>"
    />
    <small id="emailHelp" class="form-text text-muted"
      >enter the page link e.g. "/dashboard"
    </small>
  </div>

  <div id="tools">
    <button
      type="button"
      class="fa fa-italic"
      id="italic"
      onclick="document.execCommand('italic', false, '');"
    ></button>
    <button
      type="button"
      class="fa fa-bold"
      id="bold"
      onclick="document.execCommand('bold', false, '');"
    ></button>
    <button
      type="button"
      class="fa fa-underline"
      id="underline"
      onclick="document.execCommand('underline', false, '');"
    ></button>
    <button
      type="button"
      class="fa fa-scribd"
      type="button"
      onclick="fontSize();"
    ></button>
    <!-- <button type="button"  class="fa fa-font" type="button" onclick="fontName()"></button> -->
    <select onchange="fontName();">
      <ul id="display_fonts"></ul>
    </select>
    <!-- <button type="button"  type="button" class="fa fa-tint" onclick="showColor()"></button> -->
    <input type="color" onchange="changeColor()" id="color" />
    <button
      type="button"
      class="tool-items fa fa-link fa-2x"
      onclick="link()"
    ></button>
    <input
      type="file"
      accept="image/*"
      id="file"
      style="display: none"
      oninput="getImage()"
    />
    <label for="file" class="tool-items fa fa-file-image-o fa-2x"></label>
    <button
      type="button"
      class="fa fa-align-center"
      id="center"
      onclick="document.execCommand('justifyCenter',false,'')"
    ></button>
    <button
      type="button"
      class="fa fa-align-left"
      id="left"
      onclick="document.execCommand('justifyLeft',false,'')"
    ></button>
    <button
      type="button"
      class="fa fa-align-right"
      id="right"
      onclick="document.execCommand('justifyRight',false,'')"
    ></button>
    <button
      type="button"
      class="fa fa-undo"
      onclick="document.execCommand('undo',false,'')"
    ></button>
    <button
      type="button"
      class="fa fa-repeat"
      onclick="document.execCommand('redo',false,'')"
    ></button>
  </div>

  <div id="editorContainer">
    <div id="editor" contenteditable="true">
      <div><%- page.content%></div>
    </div>
  </div>
  <div id="button">
    <button type="submit" class="btn btn-primary" id="submit">Submit</button>
    <div id="id" style="display: none"><%=pageId%></div>
  </div>
</form>
<script src="/js/editor.js"></script>
