<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Pages</li>
  </ol>
</nav>
<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <a href="/dashboard" class="list-group-item">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
            Dashboard
          </a>
          <a href="/pages" class="list-group-item active main-color-bg"
            ><span
              class="glyphicon glyphicon-list-alt"
              aria-hidden="true"
            ></span>
            Pages
          </a>
          <a href="/addPage" class="list-group-item"
            ><span
              class="glyphicon glyphicon-list-alt"
              aria-hidden="true"
            ></span>
            Add Pages
          </a>
          <a href="/editHeader" class="list-group-item"
            ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit Header</a
          >
        </div>
      </div>
      <div class="col-md-9">
        <!-- Website Overview -->
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Pages</h3>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <tr>
                <th>Title</th>
                <th>Link</th>
                <th></th>
              </tr>
              <% for(let i = 0; i < pages.length; i++) { %>
              <tr>
                <td><%= pages[i].title%></td>
                <td><%= pages[i].link%></td>
                <td>
                  <a
                    class="btn btn-secondary"
                    href="/editPage/<%= pages[i]._id%>"
                    >Edit</a
                  >
                  <a
                    class="btn btn-secondary"
                    href="/yoursite/<%= pages[i].owner%>/<%= pages[i].link%>"
                    target="_blank"
                    >view</a
                  >
                  <a
                    class="btn btn-secondary"
                    href="/editList/<%= pages[i]._id%>"
                    >Edit Contributors</a
                  >
                  <a
                    class="btn btn-danger"
                    href="/deletePage/<%= pages[i]._id%>"
                    >Delete</a
                  >
                </td>
              </tr>
              <%}%>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
